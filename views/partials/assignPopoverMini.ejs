<div class="popover" id="assignButton">
  <button
    class="secondary outline shiftControlButton"
    @click="toggleAssignMini(shift.id)"
  >
    <%- include('../icons/walkin.svg'); %>
  </button>
  <div class="popoverWrapper" v-if="assignMiniOpen(shift.id)">
    <div class="popoverBlocker" @click="toggleAssignMini(shift.id)"></div>
    <div class="popoverContent">
      <%- include('./assignPopoverGuts.ejs'); %>
      <button class="contrast" @click="assignPatientMini(shift.id)">
        Assign
      </button>
    </div>
  </div>
</div>
